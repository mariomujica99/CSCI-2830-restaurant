<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.food.HomepageController">
   <children>
      <Label text="Welcome To Rio's!"/>
      <Label text=""/>

      <Label text="Menu"/>
      <Button fx:id="pizzaButton" text="Pizza" onAction="#switchToPizza"/>
      <Button fx:id="burgerButton" text="Burger" onAction="#switchToBurger"/>
      <Label text=""/>

      <Button fx:id="receiptButton" text="Checkout" onAction="#switchToReceipt"/>

   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>