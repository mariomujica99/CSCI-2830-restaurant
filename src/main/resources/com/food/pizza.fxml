<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.food.PizzaController">
    <children>
        <Label text="Create Your Pizza" />

        <Label text="Select Crust" />
        <fx:define>
            <ToggleGroup fx:id="crustGroup" />
        </fx:define>
        <HBox alignment="CENTER" spacing="20.0">
            <RadioButton fx:id="thinCrustRadioButton" text="Thin Crust" toggleGroup="$crustGroup"/>
            <RadioButton fx:id="thickCrustRadioButton" text="Thick Crust" toggleGroup="$crustGroup"/>
        </HBox>

        <Label text="Select Crust Ingredient" />
        <fx:define>
            <ToggleGroup fx:id="crustIngredientGroup" />
        </fx:define>
        <HBox alignment="CENTER" spacing="20.0">
            <RadioButton fx:id="flourCrustRadioButton" text="Flour Crust" toggleGroup="$crustIngredientGroup"/>
            <RadioButton fx:id="cauliflowerCrustRadioButton" text="Cauliflower Crust" toggleGroup="$crustIngredientGroup"/>
        </HBox>

        <Label text="Select Sauce" />
        <fx:define>
            <ToggleGroup fx:id="sauceGroup" />
        </fx:define>
        <HBox alignment="CENTER" spacing="20.0">
            <RadioButton fx:id="tomatoSauceRadioButton" text="Tomato Sauce" toggleGroup="$sauceGroup"/>
            <RadioButton fx:id="alfredoSauceRadioButton" text="Alfredo Sauce" toggleGroup="$sauceGroup"/>
        </HBox>

        <Label text="Select Your Toppings" />
        <HBox alignment="CENTER" spacing="20.0">
            <CheckBox fx:id="pepperoniToppingRadioButton" text="Pepperoni"/>
            <CheckBox fx:id="sausageToppingRadioButton" text="Sausage"/>
            <CheckBox fx:id="pepperToppingRadioButton" text="Pepper"/>
        </HBox>
        <HBox alignment="CENTER" spacing="20.0">
            <CheckBox fx:id="mushroomToppingRadioButton" text="Mushroom"/>
            <CheckBox fx:id="mozzarellaToppingRadioButton" text="Mozzarella"/>
            <CheckBox fx:id="asiagoToppingRadioButton" text="Asiago"/>
        </HBox>

        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="createPizzaButton" text="Create" onAction="#addPizzaToCart"/>
            <Button fx:id="homeButton" text="Add Another Item" onAction="#switchToHomepage"/>
            <Button fx:id="receiptButton" text="Checkout" onAction="#switchToReceipt"/>
        </HBox>

        <TextArea fx:id="receiptList" text="" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>