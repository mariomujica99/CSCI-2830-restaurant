<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.food.ReceiptController">
    <children>
        <Label text="Receipt"/>
        <TextArea fx:id="receiptListView" text=""/>

        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="homeButton" text="Add Another Item" onAction="#switchToHomepage"/>
            <Button fx:id="completeButton" text="Complete Order" onAction="#completeOrder"/>
        </HBox>

        <Label fx:id="thankYou" text=""/>
        <Label fx:id="enjoy" text=""/>
        
        <Button fx:id="exitButton" text="Exit" onAction="#exitApplication"/>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>