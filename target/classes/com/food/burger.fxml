<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Separator?>

<VBox alignment="TOP_CENTER" spacing="25.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.food.BurgerController">
    <children>
        <Label text="Build Your Burger" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;">
            <font>
                <Font size="28.0" />
            </font>
        </Label>

        <Separator prefWidth="500.0" style="-fx-background-color: #bdc3c7;"/>

        <!-- Bun Section -->
        <VBox spacing="10.0" alignment="CENTER">
            <Label text="BUN" style="-fx-text-fill: #f39c12; -fx-font-weight: bold;">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <fx:define>
                <ToggleGroup fx:id="bunGroup" />
            </fx:define>
            <HBox alignment="CENTER" spacing="20.0">
                <RadioButton fx:id="seasameSeedBunRadioButton" text="Sesame Seed" toggleGroup="$bunGroup"
                           style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                <RadioButton fx:id="briocheBunRadioButton" text="Brioche" toggleGroup="$bunGroup"
                           style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                <RadioButton fx:id="potatoBunRadioButton" text="Potato" toggleGroup="$bunGroup"
                           style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
            </HBox>
        </VBox>

        <!-- Patty Section -->
        <VBox spacing="10.0" alignment="CENTER">
            <Label text="PATTY" style="-fx-text-fill: #f39c12; -fx-font-weight: bold;">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <fx:define>
                <ToggleGroup fx:id="pattyGroup" />
            </fx:define>
            <HBox alignment="CENTER" spacing="20.0">
                <RadioButton fx:id="beefPattyRadioButton" text="Beef" toggleGroup="$pattyGroup"
                           style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                <RadioButton fx:id="chickenPattyRadioButton" text="Chicken" toggleGroup="$pattyGroup"
                           style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                <RadioButton fx:id="veggiePattyRadioButton" text="Veggie" toggleGroup="$pattyGroup"
                           style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                <RadioButton fx:id="impossiblePattyRadioButton" text="Impossible" toggleGroup="$pattyGroup"
                           style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
            </HBox>
        </VBox>

        <!-- Cheese Section -->
        <VBox spacing="10.0" alignment="CENTER">
            <Label text="CHEESE" style="-fx-text-fill: #f39c12; -fx-font-weight: bold;">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <fx:define>
                <ToggleGroup fx:id="cheeseGroup" />
            </fx:define>
            <HBox alignment="CENTER" spacing="20.0">
                <RadioButton fx:id="americanCheeseRadioButton" text="American" toggleGroup="$cheeseGroup"
                           style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                <RadioButton fx:id="swissCheeseRadioButton" text="Swiss" toggleGroup="$cheeseGroup"
                           style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                <RadioButton fx:id="cheddarCheeseRadioButton" text="Cheddar" toggleGroup="$cheeseGroup"
                           style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                <RadioButton fx:id="pepperjackCheeseRadioButton" text="Pepper Jack" toggleGroup="$cheeseGroup"
                           style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
            </HBox>
        </VBox>

        <!-- Garnishes Section -->
        <VBox spacing="10.0" alignment="CENTER">
            <Label text="GARNISHES" style="-fx-text-fill: #f39c12; -fx-font-weight: bold;">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <HBox alignment="CENTER" spacing="20.0">
                <CheckBox fx:id="tomatoGarnishRadioButton" text="Tomato"
                        style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                <CheckBox fx:id="lettuceGarnishRadioButton" text="Lettuce"
                        style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                <CheckBox fx:id="pickleGarnishRadioButton" text="Pickles"
                        style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                <CheckBox fx:id="baconGarnishRadioButton" text="Bacon"
                        style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
                <CheckBox fx:id="guacamoleGarnishRadioButton" text="Guacamole"
                        style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                <CheckBox fx:id="onionringGarnishRadioButton" text="Onion Rings"
                        style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                <CheckBox fx:id="friedeggGarnishRadioButton" text="Fried Egg"
                        style="-fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
            </HBox>
        </VBox>

        <Separator prefWidth="500.0" style="-fx-background-color: #bdc3c7;"/>

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="15.0">
            <Button fx:id="createBurgerButton" text="ADD TO CART" onAction="#addBurgerToCart"
                    prefWidth="150.0" prefHeight="40.0"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 6;"/>
            <Button fx:id="homeButton" text="BACK TO MENU" onAction="#switchToHomepage"
                    prefWidth="150.0" prefHeight="40.0"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 6;"/>
            <Button fx:id="receiptButton" text="CHECKOUT" onAction="#switchToReceipt"
                    prefWidth="150.0" prefHeight="40.0"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 6;"/>
        </HBox>

        <!-- Order Summary -->
        <VBox spacing="10.0" alignment="CENTER" prefWidth="500.0">
            <Label text="Your Order" style="-fx-text-fill: #34495e; -fx-font-weight: bold;">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <TextArea fx:id="receiptList" prefHeight="200.0" editable="false"
                    style="-fx-control-inner-background: white; -fx-border-color: #bdc3c7; -fx-border-radius: 6; -fx-background-radius: 6;"/>
        </VBox>
    </children>
    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>
</VBox>
