<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Separator?>

<VBox alignment="TOP_CENTER" spacing="25.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.food.ReceiptController">
    <children>
        <Label text="Your Order Receipt" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;">
            <font>
                <Font size="28.0" />
            </font>
        </Label>

        <Separator prefWidth="550.0" style="-fx-background-color: #bdc3c7;"/>

        <!-- Receipt Display -->
        <VBox spacing="10.0" alignment="CENTER" prefWidth="550.0">
            <Label text="Order Details" style="-fx-text-fill: #34495e; -fx-font-weight: bold;">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <TextArea fx:id="receiptListView" prefHeight="300.0" editable="false"
                    style="-fx-control-inner-background: white; -fx-border-color: #bdc3c7; -fx-border-radius: 6; -fx-background-radius: 6; -fx-font-family: 'Courier New'; -fx-font-size: 13px;"/>
        </VBox>

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="homeButton" text="ADD MORE ITEMS" onAction="#switchToHomepage"
                    prefWidth="180.0" prefHeight="45.0"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 6;"/>
            <Button fx:id="completeButton" text="COMPLETE ORDER" onAction="#completeOrder"
                    prefWidth="180.0" prefHeight="45.0"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 6;"/>
        </HBox>

        <!-- Thank You Messages -->
        <VBox spacing="10.0" alignment="CENTER">
            <Label fx:id="thankYou" text="" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;">
                <font>
                    <Font size="22.0" />
                </font>
            </Label>
            <Label fx:id="enjoy" text="" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
        </VBox>
        
        <Button fx:id="exitButton" text="EXIT APPLICATION" onAction="#exitApplication"
                prefWidth="180.0" prefHeight="45.0"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 6;"/>
    </children>
    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>
</VBox>
